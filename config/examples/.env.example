# Environment Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# N8N Configuration
# =============================================================================
N8N_API_URL=https://your-n8n-instance.com
N8N_API_KEY=your_n8n_api_key_here

# =============================================================================
# GitHub Configuration  
# =============================================================================
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_REPO_OWNER=marcoippel
GITHUB_REPO_NAME=datproto-backup-n8n

# =============================================================================
# Telegram Configuration
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_HOST=your_postgres_host
POSTGRES_PORT=5432
POSTGRES_DATABASE=your_database_name
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password

# =============================================================================
# External API Configuration
# =============================================================================
# Alpaca Trading API
ALPACA_API_KEY_ID=your_alpaca_api_key
ALPACA_API_SECRET_KEY=your_alpaca_secret_key

# News API
NEWS_API_KEY=your_news_api_key

# OpenAI API
OPENAI_API_KEY=your_openai_api_key

# Google Sheets API
GOOGLE_SHEETS_CLIENT_ID=your_google_client_id
GOOGLE_SHEETS_CLIENT_SECRET=your_google_client_secret
GOOGLE_SHEETS_REFRESH_TOKEN=your_google_refresh_token

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
LOG_LEVEL=info
BACKUP_RETENTION_DAYS=30
VALIDATION_ENABLED=true

# =============================================================================
# Security Configuration
# =============================================================================
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_for_authentication

# =============================================================================
# Monitoring Configuration
# =============================================================================
HEALTH_CHECK_INTERVAL=300000
METRICS_ENABLED=true
ALERT_WEBHOOK_URL=your_alert_webhook_url